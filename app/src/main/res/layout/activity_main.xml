<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E39F"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questionTV"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:background="#C1A36D"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="What type of coat is best put on wet?"
        android:textColor="#5d423d"
        android:textSize="9pt" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hintBTN"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:backgroundTint="#C34747"
            app:cornerRadius="0dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="textEnd"
            app:iconTint="#333041" />

        <Space
            android:layout_width="5pt"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/answerET"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:width="85pt"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:hint="Type your answer here."
            android:textSize="15dp" />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/enterBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER"
            android:textColor="#eeebec"
            app:backgroundTint="#AF3131"
            app:cornerRadius="0dp" />

        <Space
            android:layout_width="10pt"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/scoreBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textColor="#eeebec"
            app:backgroundTint="#AF3131"
            app:cornerRadius="0dp" />
    </LinearLayout>

</LinearLayout>